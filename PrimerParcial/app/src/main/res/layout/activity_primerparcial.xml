<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.invitado.primerparcial.primerparcial">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/manzana"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="94dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/TV_prodtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="278dp"
        android:text="Prod. Total"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="197dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/TV_prodactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prod. Actual"
        android:textSize="18sp"
        android:layout_marginRight="269dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="245dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/ET_total"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="153dp"
        android:layout_marginTop="179dp"
        android:ems="10"
        android:hint="ingrsar cant"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTN_mtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tmanzanas"
        android:text="Manzanas"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="171dp" />

    <Button
        android:id="@+id/BTN_mactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="amanzanas"
        android:text="Manzanas"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="231dp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="77dp"
        android:layout_height="47dp"
        android:onClick="add5"
        android:text="+5"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="152dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_15"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:onClick="add15"
        android:text="+15"
        android:layout_marginLeft="115dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="154dp" />

    <Button
        android:id="@+id/btn_30"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:onClick="add30"
        android:text="+30"
        android:layout_marginRight="125dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="154dp" />

    <Button
        android:id="@+id/btn_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="add50"
        android:text="+50"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="151dp" />

    <TextView
        android:id="@+id/TV_porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porcentaje"
        android:layout_marginRight="282dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="97dp" />

    <TextView
        android:id="@+id/TV_calcporcent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginRight="240dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="96dp" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="77dp"
        android:onClick="calcular"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/TV_cantactual"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:text="0"
        android:layout_marginRight="162dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="241dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
